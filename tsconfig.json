{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ES6",
		"module": "ESNext", // Use ESNext modules for better bundling compatibility
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"allowJs": true,
		"noEmit": true,
		"strict": false,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
		// Removed "outFile" as bundling will be handled by Bun
	},
	"include": ["ts/**/*"]
}
